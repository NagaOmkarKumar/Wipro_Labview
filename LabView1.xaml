                                        <TextBlock Text="Cycles Completed" FontSize="16" Foreground="Black" Margin="20,5,0,5" />
                                        <TextBox Text="{Binding CyclesCompleted}" FontSize="16" Foreground="Black" Margin="20,0,0,5" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="Target Cycles" FontSize="16" Foreground="Black" Margin="0,5,20,5" />
                                        <TextBox Text="{Binding TargetCycles}" FontSize="16" Foreground="Black" Margin="0,0,20,5" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <TextBlock Text="Progress Bar (% Target Cycles)" FontSize="16" TextWrapping="WrapWithOverflow" Foreground="Black" Margin="10,15,0,10" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBox Text="{Binding Efficiency}" Height="30" MinWidth="75" Width="Auto" FontSize="16" Foreground="Black" Margin="0,5,10,10" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="2">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <!-- ProgressBar with a solid color -->
                                    <ProgressBar Name="progressBar" Width="300" Height="30" Minimum="0" Maximum="100" Value="35" HorizontalAlignment="Center" Foreground="Green" Margin="10,0,10,0"/>
                                    <Canvas Width="300" Height="30" HorizontalAlignment="Center" Margin="10,0,10,10">
                                        <!-- Scale values for 0, 20, 40, 60, 80, 100 -->
                                        <TextBlock Text="0" Canvas.Left="0" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                        <TextBlock Text="20" Canvas.Left="60" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                        <TextBlock Text="40" Canvas.Left="120" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                        <TextBlock Text="60" Canvas.Left="180" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                        <TextBlock Text="80" Canvas.Left="240" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                        <TextBlock Text="100" Canvas.Left="300" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                    </Canvas>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Motor and Valve Status" FontSize="18" FontWeight="Bold" Foreground="Black" Margin="0,20,0,10" HorizontalAlignment="Center" />
                        <Border Grid.Row="1" BorderThickness="2" BorderBrush="Black" Margin="10,10,20,10">
                            <Grid Margin="10">
                                <!-- Inner Grid for content inside Rows 1 to 3 -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Row 1 content -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <StackPanel>
                                            <TextBlock Text="Cylinder Motor ON" FontSize="16" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" Foreground="Black" Margin="0,0,0,10" />
                                            <Ellipse Width="40" Height="40" Fill="{Binding CylinderMotorON}" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <StackPanel>
                                            <TextBlock Text="Solenoid 1" FontSize="16" HorizontalAlignment="Center" Foreground="Black" Margin="0,0,0,10" />
                                            <Ellipse Width="40" Height="40" Fill="{Binding Solenoid1}" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <StackPanel>
                                            <TextBlock Text="Solenoid 2" FontSize="16" HorizontalAlignment="Center" Foreground="Black" Margin="0,0,0,10" />
                                            <Ellipse Width="40" Height="40" Fill="{Binding Solenoid2}" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>

                                <!-- Row 2 content -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <StackPanel>
                                            <TextBlock Text="Loading Cylinder Motor ON" FontSize="16" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" Foreground="Black" Margin="0,0,0,10" />
                                            <Ellipse Width="40" Height="40" Fill="{Binding LoadingMotorON}" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <StackPanel>
                                            <TextBlock Text="Solenoid 3" FontSize="16" HorizontalAlignment="Center" Foreground="Black" Margin="0,0,0,10" />
                                            <Ellipse Width="40" Height="40" Fill="{Binding Solenoid3}" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <StackPanel>
                                            <TextBlock Text="Solenoid 4" FontSize="16" HorizontalAlignment="Center" Foreground="Black" Margin="0,0,0,10" />
                                            <Ellipse Width="40" Height="40" Fill="{Binding Solenoid4}" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>

                                <!-- Row 3 content -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <StackPanel>
                                            <TextBlock Text="Side Load Motor ON" FontSize="16" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" Foreground="Black" Margin="0,0,0,10" />
                                            <Ellipse Width="40" Height="40" Fill="{Binding SideLoadMotorON}" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <StackPanel>
                                            <TextBlock Text="Solenoid 5" FontSize="16" HorizontalAlignment="Center" Foreground="Black" Margin="0,0,0,10" />
                                            <Ellipse Width="40" Height="40" Fill="{Binding Solenoid5}" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <StackPanel>
                                            <TextBlock Text="Solenoid 6" FontSize="16" HorizontalAlignment="Center" Foreground="Black" Margin="0,0,0,10" />
                                            <Ellipse Width="40" Height="40" Fill="{Binding Solenoid6}" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Border Grid.Row="2" BorderThickness="2" BorderBrush="Black" Margin="10,20,20,15">
                        <Grid>
                            <!-- Inner Grid for content inside Rows 1 to 3 -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Start" Height="30" FontSize="18" Background="LightGreen" Width="100" HorizontalAlignment="Center" Margin="10">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border  Background="LightGreen"
                    BorderBrush="Black" 
                    BorderThickness="1" 
                    CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Grid.Column="1" Content="Pause" Height="30" FontSize="18" Background="Orange" Width="100" HorizontalAlignment="Center" Margin="5">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border  Background="Orange"
BorderBrush="Black" 
BorderThickness="1" 
CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                            </Grid>

                            <!-- Row 2 content -->
                            <Grid Grid.Row="1">
                                <Button Content="Reset Count" Height="30" FontSize="18" Background="LightSalmon" Width="130" HorizontalAlignment="Center" Margin="5">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border  Background="LightSalmon"
BorderBrush="Black" 
BorderThickness="1" 
CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Warning Messages" FontSize="18" HorizontalAlignment="Center" FontWeight="Bold" Foreground="Black" Margin="0,0,20,10" />
                        <ListBox Grid.Row="1" FontSize="16" Foreground="Black" Margin="0,0,20,10">
                            <!-- Example of items in the ListBox -->
                            <ListBoxItem>Warning 1</ListBoxItem>
                            <ListBoxItem>Warning 2</ListBoxItem>
                            <ListBoxItem>Warning 3</ListBoxItem>
                        </ListBox>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
