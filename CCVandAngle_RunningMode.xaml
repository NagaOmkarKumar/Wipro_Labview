<UserControl x:Class="Wipro.CCVandAngle_RunningMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wipro"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="Gainsboro" Margin="15" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="RUNNING MODE" HorizontalAlignment="Center" FontSize="29" FontWeight="Bold" FontFamily="Cambria" Margin="10"/>
        </Grid>
            <Grid Grid.Row="1" Margin="10">
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>-->
                <StackPanel Orientation="Horizontal">
            <TextBlock Text=" P No: " Margin="10" FontSize="18"/>
            <TextBox x:Name="PNO" MinWidth="160" Margin="10"/>
                    <Button Content="Save" Background="Blue" Foreground="White" FontSize="20" Width="160" Margin="10"/>
            <TextBlock Text=" ID No: 1 " Margin="10" FontSize="18"/>
            <TextBox x:Name="IDNO" MinWidth="160" Margin="10"/>
                </StackPanel>
            </Grid>
        <Grid Grid.Row="2" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text=" TEST:  " Margin="10" FontSize="18"/>
                <TextBox x:Name="test" MinWidth="160" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text=" NO OF SAMPLES:  " Margin="10" FontSize="18"/>
                <TextBox x:Name="sample" MinWidth="160" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text=" POWER PACK " Margin="10" FontSize="18"/>
                <TextBox x:Name="pP" MinWidth="160" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="5" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text=" TEST RIG " Margin="10" FontSize="18"/>
                <TextBox x:Name="testRIG" MinWidth="160" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="6" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text=" TARGET CYCLE " Margin="10" FontSize="18"/>
                <TextBox x:Name="targetCycle" MinWidth="160" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="7" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text=" CYCLES COMPLETED " Margin="10" FontSize="18"/>
                <TextBox x:Name="cyclesCompleted" MinWidth="160" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="8" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text=" RUNNING HOURS " Margin="10" FontSize="18"/>
                <TextBox x:Name="rH" MinWidth="160" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="9" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Text=" " Margin="10" FontSize="18"/>
                <TextBox x:Name="ee" MinWidth="160" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="10" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="COUNTER RESET" FontSize="18" Background="LightBlue" Foreground="Black" Margin="10" Height="30"/>
                <Button Grid.Column="1" Content="STATUS SCREEN" FontSize="18" Background="MediumBlue" Foreground="White" Margin="10" Height="30"/>
                <Button Grid.Column="2" Content="START" FontSize="18" Background="Green" Foreground="White" Margin="10" Height="30"/>
                <Button Grid.Column="3" Content="STOP" FontSize="18" Background="Red" Foreground="White" Margin="10" Height="30"/>
                <Button Grid.Column="4" Content="TERMINATE" FontSize="18" Background="AliceBlue" Margin="10" Height="30"/>
        </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="AliceBlue" Margin="15" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="CCV and ANGLE AUTO" HorizontalAlignment="Center" FontSize="29" FontWeight="Bold" FontFamily="Cambria" Margin="10"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock  Text="CCV ITERATION SETTING " TextWrapping="Wrap" Margin="10" FontSize="18"/>
                            <TextBox x:Name="CCV" MinWidth="160" Margin="10"/>
                            <TextBlock  Text=" " Margin="10" FontSize="18"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1" Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock  Text=" RUNNING CCV ITERATION"  TextWrapping="Wrap" Margin="10" FontSize="18"/>
                            <TextBox x:Name="RCCVI" MinWidth="160" Margin="10"/>
                            <TextBlock  Text=" " Margin="10" FontSize="18"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2" Margin="10">
                    <StackPanel Orientation="Horizontal">
                    <TextBlock  Text=" READ SWITCH SENSOR ERROR TIME " TextWrapping="WrapWithOverflow"  Margin="10" FontSize="18"/>
                    <TextBox x:Name="SSERROR" MinWidth="160" Margin="10"/>
                            <TextBlock  Text=" S " Margin="10" FontSize="18"/>
                        </StackPanel>
                        </Grid>
                        <Grid Grid.Row="3" Margin="10">
                    <StackPanel Orientation="Horizontal">
                    <TextBlock  Text=" ANGLE REV DELAY TIME" Margin="10" FontSize="18"/>
                    <TextBox x:Name="ARDT" MinWidth="160" Margin="10"/>
                            <TextBlock  Text=" S " Margin="10" FontSize="18"/>
                        </StackPanel>
                            </Grid>
                    <Grid Grid.Row="4" Margin="10">
                    <StackPanel Orientation="Horizontal">
                    <TextBlock  Text=" CCV FWD DELAY " Margin="10" FontSize="18"/>
                    <TextBox x:Name="CCVFD" MinWidth="160" Margin="10"/>
                            <TextBlock  Text=" S " Margin="10" FontSize="18"/>
                        </StackPanel>
                        </Grid>
                    <Grid Grid.Row="5" Margin="10">
                    <StackPanel Orientation="Horizontal">
                            <TextBlock  Text=" CCV REV DELAY " Margin="10" FontSize="18"/>
                    <TextBox x:Name="CCRD" MinWidth="160" Margin="10"/>
                            <TextBlock  Text=" S " Margin="10" FontSize="18"/>
                        </StackPanel>
                        </Grid>
                    
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock  Text=" TARGET NUMBER " Margin="10" FontSize="18"/>
                            <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="TARNUM" MinWidth="160" Margin="10"/>
                            <TextBlock  Text="  " Margin="10" FontSize="18"/>
                        </StackPanel>
                            </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1" Margin="10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock  Text=" TARGET COUNTING " Margin="10" FontSize="18"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="TARCOUNT" MinWidth="160" Margin="10"/>
                            <TextBlock  Text="  " Margin="10" FontSize="18"/>
                                </StackPanel>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2" Margin="10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock  Text=" % COMPLETION " Margin="10" FontSize="18"/>
                            <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="COMP" MinWidth="160" Margin="10"/>
                            <TextBlock  Text=" % " Margin="10" FontSize="18"/>
                                </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button  Content="START" FontSize="18" Background="Green" Foreground="Black" Margin="10" Height="30" Width="120"/>
                    <Button Content="STOP" FontSize="18" Background="Red" Foreground="White" Margin="10" Height="30" Width="120"/>
                    <Button Content="RESET" FontSize="18" Background="Yellow" Foreground="White" Margin="10" Height="30" Width="120"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
    </ScrollViewer>
</UserControl>
